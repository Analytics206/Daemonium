# Database
MONGODB_URI=mongodb://localhost:27018/daemonium

# DEPRECATED — NextAuth.js (removed). Kept for legacy; not used by web-ui.
# See: docs/web-ui-readme.md and src/app/api/auth/[...nextauth]/route.ts (returns 410).
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-key-here

# Backend API
BACKEND_API_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_API_URL=http://localhost:8000

# DEPRECATED — OAuth Providers for NextAuth (unused)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe (for payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email (optional)
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@example.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@daemonium.app

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Development
NODE_ENV=development

# Ollama (local model chat)
# Primary variables used by /api/ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:latest

# Legacy/planned compatibility variables (optional)
# If set, they will be combined as `${OLLAMA_API_URL}:${OLLAMA_API_PORT}`
# and used only when OLLAMA_BASE_URL is not provided.
# OLLAMA_API_URL=http://localhost
# OLLAMA_API_PORT=11434

# Firebase (Web UI Authentication)
# Only Google provider is supported at this time.
# These must be exposed to the browser, hence NEXT_PUBLIC_ prefix.
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=000000000000
NEXT_PUBLIC_FIREBASE_APP_ID=1:000000000000:web:abcdef1234567890
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
